# EditorConfig: http://EditorConfig.org

# Root .editorconfig
root = true


# General
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true


# Indentation for structured text files
[*.{js,jsx,ts,tsx,html,sass,scss,css,xml}]
indent_size = 2
indent_style = tab

